<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="data.Customer" table="customer">
		<id column="customerId"  name="customerId">
			<generator class="identity"/>
		</id>
		<property column="lastName" name="lastName" type="string"/>
		<property column="firstName" name="firstName" type="string"/>
		<property column="nationalId" name="nationalId" type="int"/>
		<property column="birthdate" name="birthdate" type="LocalDate"/>
		<property column="inactive" name="inactive" type="boolean"/>
	</class> 
</hibernate-mapping>